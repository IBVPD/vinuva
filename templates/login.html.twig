{% extends '@ColorAdmin/login.html.twig' %}
{% block pagetitle %}CENTINELA{% endblock %}
{% block page_header %}{% endblock %}

{% block login_header %}
    <div class="login-header">
        <div class="brand">
            <strong>VINUVA</strong> Aggregado
        </div>
        <div class="icon">
            <i class="fa fa-lock"></i>
        </div>
    </div>
{% endblock %}

{% block login_form %}
    {{ form_start(form, {attr: {class: 'margin-bottom-0'}}) }}
    <div class="form-group m-b-20">
        {{ form_widget(form._username) }}
    </div>
    <div class="form-group m-b-20">
        {{ form_widget(form._password) }}
    </div>
    <div class="login-buttons">
        <button type="submit" class="btn btn-success btn-block btn-lg">{{'Sign me in'|trans}}</button>
    </div>
    {{ form_end(form) }}
    <div class="m-t-20">
        {{ 'Forgot your password?'|trans }} {{ 'Click %link_start%here%link_end%'|trans({'%link_start%':'<a href="'~path('forgotPassword')~'">','%link_end%':'</a>'})|raw }}.
    </div>
{% endblock %}
