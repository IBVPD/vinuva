{% extends '@ColorAdmin/login.html.twig' %}
{% block pagetitle %}CENTINELA{% endblock %}
{% block page_header %}{% endblock %}

{% block login_header %}
    <div class="login-header">
        <div class="brand">
            <strong>VINUVA</strong> Aggregado
            {% block subtitle %}<small>{{ 'Password Reset'|trans }}</small>{% endblock %}
        </div>
        <div class="icon">
            <i class="fa fa-lock"></i>
        </div>
    </div>
{% endblock %}

{% block login_form %}
    {{ form_start(form, {attr: {class: 'margin-bottom-0'}}) }}
        {{ form_rest(form) }}
        <div class="login-buttons">
            <button type="submit" class="btn btn-success btn-block btn-lg">{{'Reset password'|trans}}</button>
        </div>
    {{ form_end(form) }}
{% endblock %}
