{% extends 'base.html.twig' %}

{% form_theme filterForm _self %}

{% block content %}
    <div class="panel panel-inverse">
        <div class="panel-heading">
            <div class="panel-heading-btn">
                <a href="#panelFilters" data-toggle="collapse" class="btn btn-sm btn-icon btn-circle btn-warning" title="{{'Filters'|trans}}"><i class="fa fa-search"></i></a>
            </div>
            <h4 class="panel-title">{{'Monthly Summary'|trans}}</h4>
        </div>

        <div class="panel-body">
            <div class="collapse well filters clearfix" id="panelFilters">
                {{ form_start(filterForm) }}
                {{ form_rest(filterForm) }}
                <button name="{{ filterForm.vars.name }}[reset]" class="btn btn-warning"><i class="fa fa-refresh"></i> {{'Reset'|trans}}</button>
                <button name="{{ filterForm.vars.name }}[search]" type="submit" class="pull-right btn btn-success"><i class="fa fa-search"></i> {{'Search'|trans}}</button>
                <button name="{{ filterForm.vars.name }}[export]" type="submit" class="pull-right btn btn-primary m-r-5"><i class="fa fa-file-excel"></i> {{'Export'|trans}}</button>
                {{ form_end(filterForm) }}
            </div>
            <fieldset>
                {% include '@App/Report/Monthly/summary-table.html.twig' %}
            </fieldset>
        </div>
        <div class="panel-footer"></div>
    </div>
{% endblock %}
